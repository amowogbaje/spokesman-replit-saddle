{
  "base_url": "https://api.saddleback-church.com/v1",
  "authentication": {
    "type": "Bearer Token",
    "description": "All endpoints require authentication except where noted",
    "header": "Authorization: Bearer {token}"
  },
  "endpoints": [
    {
      "path": "/users",
      "methods": {
        "GET": {
          "description": "List all users (admin only)",
          "query_parameters": {
            "limit": "Number of users to return per page",
            "offset": "Pagination offset",
            "search": "Search term to filter users by name or email"
          },
          "request_example": {
            "curl": "curl -X GET 'https://api.saddleback-church.com/v1/users?limit=10&offset=0' -H 'Authorization: Bearer {token}'"
          },
          "response": {
            "status": 200,
            "body": {
              "users": [
                {
                  "id": 1,
                  "username": "johndoe",
                  "email": "john@example.com",
                  "name": "John Doe",
                  "created_at": "2025-04-17T12:00:00Z"
                },
                {
                  "id": 2,
                  "username": "janedoe",
                  "email": "jane@example.com",
                  "name": "Jane Doe",
                  "created_at": "2025-04-16T14:30:00Z"
                }
              ],
              "total": 100,
              "limit": 10,
              "offset": 0
            }
          },
          "error_responses": [
            {
              "status": 401,
              "body": {
                "error": "Unauthorized",
                "message": "Authentication required"
              }
            },
            {
              "status": 403,
              "body": {
                "error": "Forbidden",
                "message": "Insufficient permissions"
              }
            }
          ]
        },
        "POST": {
          "description": "Create a new user account",
          "request_body": {
            "username": "johndoe",
            "password": "SecureP@ssw0rd",
            "email": "john@example.com",
            "name": "John Doe"
          },
          "request_example": {
            "curl": "curl -X POST 'https://api.saddleback-church.com/v1/users' -H 'Content-Type: application/json' -d '{\"username\":\"johndoe\",\"password\":\"SecureP@ssw0rd\",\"email\":\"john@example.com\",\"name\":\"John Doe\"}'"
          },
          "response": {
            "status": 201,
            "body": {
              "id": 1,
              "username": "johndoe",
              "email": "john@example.com",
              "name": "John Doe",
              "created_at": "2025-04-17T12:00:00Z"
            }
          },
          "error_responses": [
            {
              "status": 400,
              "body": {
                "error": "Validation Error",
                "message": "Invalid request data",
                "details": [
                  {
                    "field": "username",
                    "message": "Username already exists"
                  },
                  {
                    "field": "password",
                    "message": "Password must be at least 8 characters"
                  }
                ]
              }
            }
          ]
        }
      }
    },
    {
      "path": "/users/{id}",
      "methods": {
        "GET": {
          "description": "Get user details by ID",
          "url_parameters": {
            "id": "User ID"
          },
          "request_example": {
            "curl": "curl -X GET 'https://api.saddleback-church.com/v1/users/1' -H 'Authorization: Bearer {token}'"
          },
          "response": {
            "status": 200,
            "body": {
              "id": 1,
              "username": "johndoe",
              "email": "john@example.com",
              "name": "John Doe",
              "created_at": "2025-04-17T12:00:00Z",
              "registered_events_count": 2,
              "last_login": "2025-04-18T09:30:00Z"
