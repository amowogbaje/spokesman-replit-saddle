            "name": "John D. Doe",
            "password": "NewSecureP@ssw0rd"
          },
          "request_example": {
            "curl": "curl -X PATCH 'https://api.saddleback-church.com/v1/users/1' -H 'Content-Type: application/json' -H 'Authorization: Bearer {token}' -d '{\"email\":\"john.doe@example.com\",\"name\":\"John D. Doe\"}'"
          },
          "response": {
            "status": 200,
            "body": {
              "id": 1,
              "username": "johndoe",
              "email": "john.doe@example.com",
              "name": "John D. Doe",
              "created_at": "2025-04-17T12:00:00Z",
              "updated_at": "2025-04-18T12:00:00Z"
            }
          },
          "error_responses": [
            {
              "status": 400,
              "body": {
                "error": "Validation Error",
                "message": "Invalid request data",
                "details": [
                  {
                    "field": "email",
                    "message": "Invalid email format"
                  }
                ]
              }
            },
            {
              "status": 404,
              "body": {
                "error": "Not Found",
                "message": "User not found"
              }
            }
